<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="0dip"
                        android:layout_height="40dip"
                        android:layout_weight="10.73"
                        android:padding="5dip"
                        android:background="@drawable/border"/>

                    <ImageView
                        android:layout_width="0dip"
                        android:layout_height="40dip"
                        android:layout_weight="1.5"
                        android:id="@+id/search"
                        android:src="@drawable/download"
                        android:clickable="true"/>

                    <ImageView
                        android:layout_width="0dip"
                        android:layout_height="40dip"
                        android:layout_weight="1.5"
                        android:clickable="true"
                        android:src="@drawable/user"
                        android:id="@+id/userClick" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="Top Categories"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:textStyle="bold"/>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dip"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:layout_marginBottom="10dip">
                        <LinearLayout
                            android:id="@+id/cat_entertainment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginRight="40dip"
                            android:layout_marginLeft="20dip">
                            <ImageView
                                android:layout_width="60dip"
                                android:layout_height="60dip"
                                android:src="@drawable/entertainment"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Entertainment"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cat_education"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginRight="40dip">
                            <ImageView
                                android:layout_width="60dip"
                                android:layout_height="60dip"
                                android:src="@drawable/edu"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Education"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cat_services"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginRight="40dip">
                            <ImageView
                                android:layout_width="60dip"
                                android:layout_height="60dip"
                                android:src="@drawable/services"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Services"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cat_food"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginRight="40dip">
                            <ImageView
                                android:layout_width="60dip"
                                android:layout_height="60dip"
                                android:src="@drawable/food1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Food"
                                android:textSize="14sp"/>
                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip">

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:id="@+id/home">

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageView
                                android:layout_height="40dip"
                                android:layout_width="40dip"
                                android:layout_margin="2dip"
                                android:src="@drawable/home" />
                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dip"
                                android:layout_marginLeft="2dip"
                                android:layout_marginRight="2dip"
                                android:layout_marginTop="1dip"
                                android:text="Home"
                                android:textColor="#263238"
                                android:textSize="14sp" />
                        </TableRow>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:id="@+id/deals">

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageView
                                android:layout_height="40dip"
                                android:layout_width="40dip"
                                android:layout_margin="2dip"
                                android:src="@drawable/deals" />
                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dip"
                                android:layout_marginLeft="2dip"
                                android:layout_marginRight="2dip"
                                android:layout_marginTop="1dip"
                                android:text="Deals"
                                android:textColor="#263238"
                                android:textSize="14sp" />
                        </TableRow>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:id="@+id/top">

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageView
                                android:layout_height="40dip"
                                android:layout_width="40dip"
                                android:layout_margin="2dip"
                                android:src="@drawable/top" />
                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dip"
                                android:layout_marginLeft="2dip"
                                android:layout_marginRight="2dip"
                                android:layout_marginTop="1dip"
                                android:text="Top"
                                android:textColor="#263238"
                                android:textSize="14sp" />
                        </TableRow>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:id="@+id/trends">

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageView
                                android:layout_height="40dip"
                                android:layout_width="40dip"
                                android:layout_margin="2dip"
                                android:src="@drawable/trends" />
                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dip"
                                android:layout_marginLeft="2dip"
                                android:layout_marginRight="2dip"
                                android:layout_marginTop="1dip"
                                android:text="Trends"
                                android:textColor="#263238"
                                android:textSize="14sp" />
                        </TableRow>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:background="@drawable/border"
                        android:id="@+id/categories">

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageView
                                android:layout_height="40dip"
                                android:layout_width="40dip"
                                android:layout_margin="2dip"
                                android:src="@drawable/categories" />
                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dip"
                                android:layout_marginLeft="2dip"
                                android:layout_marginRight="2dip"
                                android:layout_marginTop="1dip"
                                android:text="Categories"
                                android:textColor="#263238"
                                android:textSize="14sp" />
                        </TableRow>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Categories"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="10dip"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dip"
                android:gravity="left"
                android:layout_gravity="left">

                <LinearLayout
                    android:id="@id/cat_entertainment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="40dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginBottom="20dip">
                    <ImageView
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:src="@drawable/entertainment"
                        android:layout_marginRight="10dip"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entertainment"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@id/cat_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="40dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginBottom="20dip">
                    <ImageView
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:src="@drawable/food1"
                        android:layout_marginRight="10dip"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@id/cat_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="40dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginBottom="20dip">
                    <ImageView
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:src="@drawable/edu"
                        android:layout_marginRight="10dip"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Education"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cat_health"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="40dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginBottom="20dip">
                    <ImageView
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:src="@drawable/health"
                        android:layout_marginRight="10dip"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@id/cat_services"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="40dip"
                    android:layout_marginLeft="20dip">
                    <ImageView
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:src="@drawable/services"
                        android:layout_marginRight="10dip"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Services"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
